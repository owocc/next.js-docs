---
import { Image as AstroImage } from "astro:assets";
interface Props {
  alt: string;
  srcLight: string;
  srcDark: string;
  width: number;
  height: number;
  class?: string;
}

const {
  alt,
  srcLight,
  srcDark,
  width,
  height,
  class: className = "",
} = Astro.props;
const IMAGE_BASEURL = import.meta.env.PUBLIC_NEXT_IMAGE_BASE_URL;
---

<AstroImage
  src={`${IMAGE_BASEURL}${srcDark}`}
  alt={alt}
  width={width}
  height={height}
  class:list={["hidden dark:unset", className]}
/>

<AstroImage
  src={`${IMAGE_BASEURL}${srcLight}`}
  alt={alt}
  width={width}
  height={height}
  class:list={["dark:hidden", className]}
/>
